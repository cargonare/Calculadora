        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewAciertos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Aciertos"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewFallos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/Aciertos"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"/>
        />

    <TextView
        android:id="@+id/textViewPorcentaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/Aciertos"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/Record"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/textViewNulo2"
        android:layout_width="422dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="5"
        android:textSize="30sp"
        android:visibility="invisible" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textViewNulo3"
        android:layout_width="422dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="5"
        android:textSize="30sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:divider="@drawable/divider"
        android:orientation="horizontal"
        android:showDividers="middle">


        <TextView
            android:id="@+id/textViewNulo5"
            android:layout_width="427dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/buttonEstadisticas"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Estadisticas"
            android:textSize="9dp" />
        <TextView
            android:id="@+id/textViewNulo1"
            android:layout_width="422dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30sp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>